DOTF=$(pwd | sed -r 's|'"$HOME"'|~|g')
export DOTFILES=$(pwd)
sed -ri 's|DOTFILES=.*|DOTFILES='"$DOTF"'|g' bash_profile
if ! [[ -f $(pwd)/$HOSTNAME.local ]]; then
    touch $(pwd)/$HOSTNAME.local
    echo "Keyboard layout:"
    read LAYOUT
    echo 'export LAYOUT='$LAYOUT >> $(pwd)/$HOSTNAME.local;
fi
sh updatefiles
