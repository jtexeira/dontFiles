#!/bin/sh
za() {
	zathura $1 & disown
}

f() {
    nvim -u $DOTFILES/vimrc \
        $DOTFILES/$(find $DOTFILES/* | \
        sed "s|$DOTFILES/*||g;/\.git/d" | fzf)
}

work() {
    cd $HOME/Lab/$1-2021
}

class() {
    cd $HOME/Lab/$1-classes
}

chpp() {
    nvim -u $DOTFILES/vimrc src/$1.cpp "+:vs include/$1.hpp"
}
