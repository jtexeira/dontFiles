[ -x "$(command -v exa)" ] && alias ls='exa' && alias l='exa' || alias ls='ls --color=auto' && alias l='ls --color=auto'
[ -x "$(command -v bat)" ] && alias cat='bat'
[ -x "$(command -v nvim)" ] && alias v='nvim -u $DOTFILES/vimrc'
alias cls=clear
alias sudo='sudo '
alias ':q'='exit'
alias 'cpull'='rsync -truav --exclude 'target' --max-size=200m search:Lab/ ~/Lab/'
alias 'cpush'='rsync -truav --exclude 'target' --max-size=200m ~/Lab/ search:Lab/'
